<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SearchSuggestionFragment">

    <ImageView
        android:id="@+id/ivSearchImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/search_product_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <tradly.social.common.views.custom.CustomTextView
        android:id="@+id/tvSearchHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Search Products"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextView.Subtitle1"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/ivSearchImage"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>