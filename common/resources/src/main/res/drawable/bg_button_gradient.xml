<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
        >

            <corners
                    android:radius="24dp"
            />
            <stroke
                    android:width="0dp"
                    android:color="#f4efef"/>
            <gradient
                    android:angle="90"
                    android:endColor="?attr/buttonPressedStateColor"
                    android:startColor="?attr/buttonPressedStateColor"
                    android:type="linear" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
        >
            <gradient
                    android:angle="90"
                    android:endColor="?attr/buttonPressColor"
                    android:startColor="?attr/buttonPressedStateColor"
                    android:type="linear" />
            <corners
                    android:radius="24dp"/>
            <stroke
                    android:width="0dp"
                    android:color="#f4efef"/>

        </shape>
    </item>

</selector>