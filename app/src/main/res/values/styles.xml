<resources>
    <style name="StripeDefaultTheme" parent="StripeBaseTheme">
        <!-- Applied to toolbar background -->
        <item name="colorPrimary">@color/colorWhite</item>

        <!-- Applied to status bar -->
        <item name="colorPrimaryDark">@color/colorWhite</item>

        <!-- Applied to toolbar foreground/text -->
        <item name="titleTextColor">@color/colorDarkBlack</item>

        <item name="android:textColor">@color/colorTextBlack</item>

        <item name="android:windowBackground">@color/colorWhite</item>

        <item name="android:textColorSecondary">@color/colorTextBlack</item>

        <item name="android:colorAccent">@color/colorPrimary</item>

        <item name="colorControlActivated">@color/colorDarkBlack</item>

        <item name="colorControlHighlight">@color/colorDarkBlack</item>

        <!--
            Applied to selected Payment Method; active field; links;
            add new Payment Method call-to-action
        -->
        <item name="colorAccent">@color/colorDarkBlack</item>

        <item name="android:textColorHint">@color/colorMediumGrey</item>
        <!-- Applied to form field text -->
        <item name="android:editTextColor">@color/colorMediumBlack</item>

        <item name="editTextColor">@color/colorMediumBlack</item>
    </style>

</resources>