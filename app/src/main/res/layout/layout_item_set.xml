<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:cardElevation="1dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/productImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siShape="@drawable/bg_rounded_corner_img2"
            app:siSquare="true"/>

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="Redmi Note 7S"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/checkbox"
            app:layout_constraintLeft_toRightOf="@id/productImg"
            app:layout_constraintRight_toLeftOf="@id/checkbox"
            app:layout_constraintStart_toEndOf="@id/productImg"
            app:layout_constraintTop_toTopOf="@id/productImg"/>
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Rs121"
            android:textColor="@color/colorTextBlack"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/productImg"
            app:layout_constraintStart_toEndOf="@id/productImg"
            app:layout_constraintTop_toBottomOf="@id/productTitle"/>
        <TextView
            android:id="@+id/txtActualPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="676"
            android:textColor="@color/colorCustomBlack"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@id/txtPrice"
            app:layout_constraintBottom_toBottomOf="@id/txtPrice"
            app:layout_constraintLeft_toRightOf="@id/txtPrice"
            app:layout_constraintStart_toEndOf="@id/txtPrice"
            app:layout_constraintTop_toTopOf="@id/txtPrice"/>
        <TextView
            android:id="@+id/txtOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="67%off"
            android:textColor="@color/colorGreenOffer"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBaseline_toBaselineOf="@id/txtPrice"
            app:layout_constraintBottom_toBottomOf="@id/txtPrice"
            app:layout_constraintLeft_toRightOf="@id/txtActualPrice"
            app:layout_constraintStart_toEndOf="@id/txtActualPrice"
            app:layout_constraintTop_toTopOf="@id/txtPrice"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:button="?attr/checkBox"
            android:clickable="false"
            android:enabled="false"
            android:onClick="cardClick"
            app:layout_constraintBottom_toBottomOf="@id/productTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/productTitle"
            app:useMaterialThemeColors="false"/>
        <ImageView android:layout_width="24dp" android:layout_height="24dp"
                   android:layout_marginTop="15dp"
                   android:layout_marginEnd="16dp"
                   android:layout_marginRight="16sp"
                   android:src="@drawable/ic_down_arrow"
                   app:layout_constraintBottom_toBottomOf="@id/txtOffer"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="@id/txtOffer"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="15dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/productImg"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>