<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/imgCategory"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderWidth="0dp"
        app:siRadius="6dp"
        app:siSquare="true"/>

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:textSize="14sp"
        android:theme="@style/TextViewRTL"
        android:textColor="@color/colorMediumBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCategory"
        app:layout_constraintTop_toTopOf="@id/imgCategory"/>
    <TextView
        android:id="@+id/txtProductDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorDarkGrey"
        android:text="hello"
        android:theme="@style/TextViewRTL"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCategory"
        app:layout_constraintTop_toBottomOf="@id/txtCategory"/>
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgCategory"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgCategory"
        app:layout_constraintTop_toBottomOf="@id/txtProductDesc"/>

    <FrameLayout android:id="@+id/view"
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="12dp"
                 app:layout_constraintTop_toBottomOf="@id/chipGroup"
                 android:background="@drawable/bg_item_category_image"
                 app:layout_constraintLeft_toRightOf="@id/imgCategory"
                 app:layout_constraintStart_toEndOf="@id/imgCategory">
        <ImageView android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:layout_gravity="center"
                   android:tint="@color/colorWhite"
                   app:srcCompat="@drawable/ic_crop_original_black_24dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/txtTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:maxLines="1"
        android:textSize="12sp"
        android:ellipsize="end"
        android:theme="@style/TextViewRTL"
        app:layout_constraintEnd_toStartOf="@id/actionBtn"
        app:layout_constraintLeft_toRightOf="@id/view"
        app:layout_constraintRight_toLeftOf="@id/actionBtn"
        app:layout_constraintStart_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
    />
    <FrameLayout
        android:id="@+id/actionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="?attr/buttonGradientBg"
        app:layout_constraintBottom_toBottomOf="@id/txtTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtTwo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup"
        app:layout_constraintStart_toEndOf="@id/txtTwo"
        app:layout_constraintTop_toTopOf="@id/txtTwo"
    >
        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/product_follow"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>