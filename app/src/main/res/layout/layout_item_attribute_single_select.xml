<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleSelectionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/spinnerHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:theme="@style/TextViewRTL"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:id="@+id/txtSingleSelectValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:theme="@style/TextViewRTL"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawableRight="@drawable/ic_down_arrow"
                android:gravity="start|center_vertical"
                android:textColor="@color/colorMediumBlack"
                android:textSize="14sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1.4dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorVeryLightBlack" />
            <Spinner
                android:id="@+id/attrSpinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:alpha="0"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:spinnerMode="dropdown" />
        </RelativeLayout>
    </LinearLayout>




</RelativeLayout>